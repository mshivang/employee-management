pipeline {
    agent any

    triggers {
        pollSCM '*/5 * * * *'
    }

    stages {
        stage('Building') {
            steps {
                echo 'Building...'
                sh ```
                    pip install -r requirements.txt
                ```
            }
        }
        stage('Testing') {
            steps {
                echo 'Testing...'
                sh ```
                    python3 manage.py test
                ```
            }
        }
        stage('Deploying') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}